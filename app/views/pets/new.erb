<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pets[name]" id="pet_name">

  <br></br>

  <label>Choose an existing owner:</label>
  <br></br>

  <% @owners.each do |owner| %>
    <input type="checkbox" name="pets[owner_ids][]" value="<%=owner.id%>" id="<%=owner.id%>">
    <%=owner.name%>
    </input>
  <% end %>

  <br></br>
  <label>and/or, create a new pet:</label>
  <br></br>
  <label>Name:</label>
    <input type="text" name="pet[name]"></input>

  <br></br>

  <input type="submit" value="Create Pet">
</form>
